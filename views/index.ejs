  <div class="row" style="text-align: center;margin-right: 0px !important; margin-top: 20px; margin-left: 10px;">
    <div class="col-md-12">

      <div class="border col-md-4" ng-repeat="movie in listMovie" style="float: left ; margin-top:10px">
        <a href="/{{movie._id}}" style="text-decoration: none; color:black">

          <img src="" id="image" style="margin-top: 10px;height: 300px; width:400px;object-fit: cover;">
          <div class="detail">
            <h2 class="name-film ng-binding" style="margin-top: 20px;
            "> {{movie.tenPhim}} </h2>
            <p class="content-film ng-binding">
              <hr class="hr-film">
              <span class="my-text-bold"> Thể loại: </span>{{movie.theLoai}} </p>
            <p class="content-film ng-binding" ng-init="content=minContentFilm(film)">
              <span class="my-text-bold"> Ngày ra mắt: </span>{{movie.ngayRaMat| date:'dd-MM-yyyy' }}</p>
          </div>
        </a>
      </div>
    </div>
  </div>

  <footer>
    <% include footer.ejs %>
  </footer>
