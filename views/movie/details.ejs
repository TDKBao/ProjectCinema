                <span style="font-size:28px"><strong style="font-size:30px"> Thời gian phát hành: </strong>{{phim.ngayRaMat| date:'dd-MM-yyyy' }}</span>
            </div>

            <div class="form-group">
                   <span style="font-size:28px"> <strong style="font-size:30px">Nội dung mô tả:</strong> {{phim.noiDung}} </span>
                  
            </div>
            
        </div>
        <div class="container my-container-right my-bot-form">
            <button type="submit" class="btn btn-primary my-btn text-center animated slideInUp" ng-click="clickUpLoadFilm()" style="margin-right:15px">
                <i class="fa fa-edit fa-lg" ></i>
                   Sửa
            </button>
        </div>
        
